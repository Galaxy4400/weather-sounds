{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./docs",
		"rootDir": "./src",
		// "baseUrl": "./src",
		"strict": true,
		"checkJs": true,
		"allowJs": true,
		"moduleResolution": "Node",
		// "noEmit": true,
		"noEmitOnError": true,
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
	},
	"include": [
		"./src/**/*",
		"./*.d.ts"
	],
	"exclude": [
		"node_modules"
	],
}